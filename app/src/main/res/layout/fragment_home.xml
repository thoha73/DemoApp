<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    tools:context=".fragment.HomeFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="35sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bk_search"
                android:layout_marginTop="15dp"
                app:backgroundTint="@null"
                android:layout_gravity="center_horizontal"
                android:textColorHint="#BBB6B6"
                android:hint="Search"
                android:drawableLeft="@drawable/search_small"
                android:drawablePadding="7sp"
                android:paddingLeft="10sp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Discover"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                android:paddingLeft="8sp"
                android:textStyle="bold"/>

            <!-- New section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:layout_marginTop="10dp"
               >

                <TextView
                    android:id="@+id/tv_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_showallNew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show all"
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:gravity="right"
                    android:textColor="#085FE0"
                    android:layout_marginRight="20dp" />
            </LinearLayout>

            <!-- Popular section -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:layout_marginLeft="10dp"
                android:padding="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_popular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Popular"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_showallPopular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show all"
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:gravity="right"
                    android:textColor="#085FE0"
                    android:layout_marginRight="20dp" />
            </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp" />
            <!-- Category section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_showallCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show all"
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:gravity="right"
                    android:textColor="#085FE0"
                    android:layout_marginRight="20dp" />
            </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:clipToPadding="false"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>